import { NextFunction, Request, Response } from "express";
import dotenv from "dotenv";

dotenv.config();

export async function isSuperAdmin(
  req: Request,
  res: Response,
  next: NextFunction
) {
  try {
    if (req.body.userRole === "parent") {
      return next();
    }

    if (req.body.userRole === "admin") {
      return next();
    }
  } catch (e) {
    res.status(500).json({ msg: "server error" });
  }
}
